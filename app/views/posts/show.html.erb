<h3 class="title"><%= @post.title %></h3>
<div class="post-meta">
	<span class="sep">Posted on </span>
	<time class="entry-date">
		<%= @post.updated_at %>
	</time>
	<span class="byline"> <span class="sep">by</span> <span class="author"> <% if @post.user%>
			<%= @post.user.email %>
			<% else %>
			no user
			<%end%> </span> </span>
</div><!--post-meta end-->
<p>
	<%= image_tag @post.image_url.to_s, :class=>"row-fluid" %>
	<%= @post.content %>
</p>
<hr/>
Category :
	<% if @category %>
		<%= link_to @category.name, posts_path(:category => @category) %>
	<% else %>
	    No Category
	<% end %>
<hr/>
<div id ="disqus_thread">
	<%= raw disqus_thread %>
</div>
