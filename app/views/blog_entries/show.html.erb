<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", blog_entries_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_blog_entry_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", blog_entry_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.blog_entry.subject", :default => t("activerecord.labels.subject", :default => "Subject")) %>:</b>
          <%= @blog_entry.subject %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.blog_entry.content", :default => t("activerecord.labels.content", :default => "Content")) %>:</b>
          <%= @blog_entry.content %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.blog_entry.publish_at", :default => t("activerecord.labels.publish_at", :default => "Publish at")) %>:</b>
          <%= @blog_entry.publish_at %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_blog_entry_path(@blog_entry), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), blog_entry_path(@blog_entry), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>

      </div>
    <p>
     <b>Tags:</b>
        <%= join_tags(@blog_entry) %>
     </p>

     <h2>Category</h2>
     <%= @category.name %>

     <h2>Comments</h2>
     <%= render @blog_entry.comments %>
     <hr/>
      <h2>Add a comment:</h2>
      <%= render "comments/form" %>

    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'home/sidebar') -%>
