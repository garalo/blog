<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", blog_entries_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_blog_entry_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> BlogEntries</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.blog_entry.subject", :default => t("activerecord.labels.subject", :default => "Subject")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @blog_entries.each do |blog_entry| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= blog_entry.id %>
          </td>
                    <td>
            <%= link_to blog_entry.subject, blog_entry_path(blog_entry) %>
          </td>
                    <td>
            <%= blog_entry.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", blog_entry_path(blog_entry) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_blog_entry_path(blog_entry) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", blog_entry_path(blog_entry), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= paginate @blog_entries  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'home/sidebar') -%>
